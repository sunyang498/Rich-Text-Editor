{
  "name": "richtexteditor",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix --cache",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "start:websocket": "y-websocket --port 1234"
  },
  "dependencies": {
    "@tiptap/extension-collaboration": "^3.10.2",
    "@tiptap/extension-color": "^3.8.0",
    "@tiptap/extension-heading": "^3.8.0",
    "@tiptap/extension-history": "^3.8.0",
    "@tiptap/extension-image": "^3.9.1",
    "@tiptap/extension-link": "^3.10.1",
    "@tiptap/extension-task-item": "^3.8.0",
    "@tiptap/extension-task-list": "^3.8.0",
    "@tiptap/extension-text-align": "^3.9.0",
    "@tiptap/extension-text-style": "^3.8.0",
    "@tiptap/starter-kit": "^3.8.0",
    "@tiptap/vue-3": "^3.8.0",
    "axios": "^1.13.1",
    "element-plus": "^2.11.5",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3",
    "ws": "^8.18.3",
    "y-prosemirror": "^1.3.7",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.19.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.0.3",
    "jiti": "^2.6.1",
    "npm-run-all2": "^8.0.4",
    "typescript": "~5.9.0",
    "vite": "^7.1.11",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vue-tsc": "^3.1.1"
  },
  "build": {
    "productName": "笔砚文档",
    "appId": "com.example.richtexteditor",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "output": "electron-dist"
    },
    "icon": "D:\\vueWorkplace\\Rich-Text-Editor\\RichTextEditor\\public\\favicon.ico",
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "D:\\vueWorkplace\\Rich-Text-Editor\\RichTextEditor\\public\\favicon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": true,
      "shortcutName": "笔砚文档",
      "installerIcon": "D:\\vueWorkplace\\Rich-Text-Editor\\RichTextEditor\\public\\favicon.ico",
      "uninstallerIcon": "D:\\vueWorkplace\\Rich-Text-Editor\\RichTextEditor\\public\\favicon.ico"
    }
  }
}
